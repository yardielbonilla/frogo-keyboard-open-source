<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frogo_rv_grid_type_6_root_linear_layout"
    style="@style/FrogoLayoutGrid8dp"
    android:background="@drawable/bg_card_8dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/frogo_rv_grid_type_6_civ_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_dimen_100dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/frogo_dummy_content_description"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/frogo_rv_grid_type_6_tv_title"
        style="@style/frogoTvListTitle"

        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/frogo_rv_grid_type_6_tv_subtitle"
        style="@style/FrogoTvListSubTitle"
        android:textColor="@color/tv_text"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/frogo_rv_grid_type_6_tv_desc"
        style="@style/FrogoTvListDescription"
        android:layout_marginTop="@dimen/frogo_dimen_8dp"
        android:textColor="@color/tv_text"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>